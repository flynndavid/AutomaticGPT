# =====================================================
# EXPO TEMPLATE ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and update the values
# Generated from template configuration system

# =====================================================
# APP CONFIGURATION
# =====================================================
EXPO_PUBLIC_APP_NAME=My Awesome App
EXPO_PUBLIC_APP_SLUG=my-awesome-app
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_ENVIRONMENT=development

# =====================================================
# CORE UI FEATURES
# =====================================================
EXPO_PUBLIC_ENABLE_VOICE=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_ENABLE_ANIMATIONS=true
EXPO_PUBLIC_ENABLE_THEME_CUSTOMIZATION=true

# =====================================================
# AUTHENTICATION & USER MANAGEMENT (IMPLEMENTED)
# =====================================================
EXPO_PUBLIC_ENABLE_AUTH=true
EXPO_PUBLIC_ENABLE_EMAIL_AUTH=true
EXPO_PUBLIC_ENABLE_PROFILE=true
EXPO_PUBLIC_ENABLE_PROFILE_MANAGEMENT=true

# Social Auth (partially implemented)
EXPO_PUBLIC_ENABLE_SOCIAL_AUTH=false
EXPO_PUBLIC_ENABLE_GOOGLE_AUTH=false
EXPO_PUBLIC_ENABLE_APPLE_AUTH=false
EXPO_PUBLIC_ENABLE_SMS_AUTH=false

# =====================================================
# NAVIGATION & LAYOUT (IMPLEMENTED)
# =====================================================
EXPO_PUBLIC_ENABLE_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SPLASH_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SIDEBAR=true
EXPO_PUBLIC_ENABLE_TAB_NAVIGATION=false

# =====================================================
# CONVERSATION SYSTEM (IMPLEMENTED)
# =====================================================
EXPO_PUBLIC_ENABLE_CONVERSATION_MANAGEMENT=true
EXPO_PUBLIC_ENABLE_CONVERSATION_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CONVERSATION_SHARING=true

# =====================================================
# ADVANCED FEATURES (PLANNED)
# =====================================================
EXPO_PUBLIC_ENABLE_STORAGE=false
EXPO_PUBLIC_ENABLE_FILE_UPLOADS=false
EXPO_PUBLIC_ENABLE_OFFLINE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_REALTIME=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=false

# =====================================================
# BRANDING & THEME
# =====================================================
EXPO_PUBLIC_PRIMARY_COLOR=#3B82F6
EXPO_PUBLIC_SECONDARY_COLOR=#64748B
EXPO_PUBLIC_THEME_MODE=system

# =====================================================
# API CONFIGURATION
# =====================================================
EXPO_PUBLIC_API_URL=http://localhost:8081

# =====================================================
# AI SERVICES
# =====================================================
# OpenAI (required for AI chat features)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI Providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Required for auth, conversations, analytics, and sharing features
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# SOCIAL AUTH CREDENTIALS (if enabled)
# =====================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id

# =====================================================
# ANALYTICS & MONITORING (if enabled)
# =====================================================
ANALYTICS_API_KEY=your_analytics_api_key
SENTRY_DSN=your_sentry_dsn

# =====================================================
# FILE STORAGE (if enabled)
# =====================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# =====================================================
# PUSH NOTIFICATIONS (if enabled)
# =====================================================
EXPO_PUSH_TOKEN=your_expo_push_token
FCM_SERVER_KEY=your_fcm_server_key

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================
# Flipper (React Native debugging)
FLIPPER_ENABLED=false

# Metro bundler
METRO_CACHE_ENABLED=true

# =====================================================
# TEMPLATE CONFIGURATION
# =====================================================
# Internal template settings
TEMPLATE_VERSION=2.0.0
TEMPLATE_LAST_UPDATED=2024-12-27

# Feature completion tracking
TEMPLATE_AUTH_COMPLETE=true
TEMPLATE_NAVIGATION_COMPLETE=true
TEMPLATE_CONVERSATIONS_COMPLETE=true
TEMPLATE_ANALYTICS_COMPLETE=true
TEMPLATE_SHARING_COMPLETE=true