# =====================================================
# EXPO APP TEMPLATE - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and update with your values
# DO NOT commit .env.local to version control

# =====================================================
# APP CONFIGURATION
# =====================================================
EXPO_PUBLIC_APP_NAME=My Awesome App
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_ENVIRONMENT=development

# =====================================================
# API CONFIGURATION
# =====================================================
EXPO_PUBLIC_API_URL=http://localhost:8081
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# =====================================================
# AI/CHAT CONFIGURATION
# =====================================================
EXPO_PUBLIC_MAX_MESSAGES=100
EXPO_PUBLIC_DEFAULT_TEMPERATURE=0.7
EXPO_PUBLIC_MAX_TOKENS=2000
EXPO_PUBLIC_STREAMING_ENABLED=true

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# =====================================================
# CORE FEATURE FLAGS
# =====================================================
EXPO_PUBLIC_ENABLE_VOICE=false
EXPO_PUBLIC_ENABLE_OFFLINE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_PUSH=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_HAPTICS=true

# =====================================================
# TEMPLATE FEATURE FLAGS (Future Implementation)
# =====================================================
EXPO_PUBLIC_ENABLE_AUTH=false
EXPO_PUBLIC_ENABLE_STORAGE=false
EXPO_PUBLIC_ENABLE_ONBOARDING=false
EXPO_PUBLIC_ENABLE_PROFILE=false
EXPO_PUBLIC_ENABLE_SIDEBAR=false

# =====================================================
# UI CONFIGURATION
# =====================================================
EXPO_PUBLIC_ANIMATION_DURATION=300
EXPO_PUBLIC_MAX_MESSAGE_LENGTH=1000
EXPO_PUBLIC_MESSAGES_PER_PAGE=50
EXPO_PUBLIC_ENABLE_ANIMATIONS=true

# =====================================================
# BRANDING & THEMING (Future Implementation)
# =====================================================
EXPO_PUBLIC_PRIMARY_COLOR=#3B82F6
EXPO_PUBLIC_SECONDARY_COLOR=#64748B
EXPO_PUBLIC_LOGO_URL=/assets/logo.png
EXPO_PUBLIC_ICON_URL=/assets/icon.png
EXPO_PUBLIC_SPLASH_URL=/assets/splash.png
EXPO_PUBLIC_THEME_MODE=system

# =====================================================
# AUTHENTICATION (Future Implementation)
# =====================================================
# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Social Authentication
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# =====================================================
# EXTERNAL SERVICES (Future Implementation)
# =====================================================
# Analytics & Monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id

# Deployment
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# =====================================================
# DEVELOPMENT CONFIGURATION
# =====================================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_CONSOLE_LOGGING=true
EXPO_PUBLIC_PERFORMANCE_MONITORING=false
EXPO_PUBLIC_MOCK_API=false
