# =============================================================================
# AUTOMATIC EXPOGPT TEMPLATE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and update with your actual values
# Generated by template setup wizard

# =============================================================================
# APP CONFIGURATION
# =============================================================================
EXPO_PUBLIC_APP_NAME="My Awesome App"
EXPO_PUBLIC_APP_SLUG="my-awesome-app"
EXPO_PUBLIC_APP_VERSION="1.0.0"
EXPO_PUBLIC_BUILD_NUMBER="1"
EXPO_PUBLIC_ENVIRONMENT="development"

# =============================================================================
# CORE FEATURES (FULLY IMPLEMENTED) - Default: true
# =============================================================================

# Authentication & User Management
EXPO_PUBLIC_ENABLE_AUTH=true
EXPO_PUBLIC_ENABLE_EMAIL_AUTH=true
EXPO_PUBLIC_ENABLE_PROFILE=true
EXPO_PUBLIC_ENABLE_PROFILE_MANAGEMENT=true

# Navigation & Layout
EXPO_PUBLIC_ENABLE_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SPLASH_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SIDEBAR=true
EXPO_PUBLIC_ENABLE_THEME_CUSTOMIZATION=true

# Conversation Management System
EXPO_PUBLIC_ENABLE_CONVERSATION_MANAGEMENT=true
EXPO_PUBLIC_ENABLE_CONVERSATION_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CONVERSATION_SHARING=true

# UI Features
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_ENABLE_ANIMATIONS=true

# =============================================================================
# TEMPLATE FEATURES (NOT YET IMPLEMENTED) - Default: false
# =============================================================================

# Social Authentication (partially implemented)
EXPO_PUBLIC_ENABLE_SOCIAL_AUTH=false
EXPO_PUBLIC_ENABLE_GOOGLE_AUTH=false
EXPO_PUBLIC_ENABLE_APPLE_AUTH=false
EXPO_PUBLIC_ENABLE_SMS_AUTH=false

# File Storage & Uploads
EXPO_PUBLIC_ENABLE_STORAGE=false
EXPO_PUBLIC_ENABLE_FILE_UPLOADS=false

# Advanced Features
EXPO_PUBLIC_ENABLE_OFFLINE=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_REALTIME=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=false

# Additional Features
EXPO_PUBLIC_ENABLE_VOICE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_TAB_NAVIGATION=false

# =============================================================================
# BRANDING & THEMING
# =============================================================================
EXPO_PUBLIC_PRIMARY_COLOR="#3B82F6"
EXPO_PUBLIC_SECONDARY_COLOR="#64748B"
EXPO_PUBLIC_THEME_MODE="system"
EXPO_PUBLIC_APP_LOGO_URL=""

# =============================================================================
# API CONFIGURATION
# =============================================================================
EXPO_PUBLIC_API_URL="http://localhost:8081"

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI (Required for AI chat features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"

# Supabase (Required for auth, conversations, analytics, sharing)
# Get your credentials from: https://supabase.com/dashboard
EXPO_PUBLIC_SUPABASE_URL="your_supabase_project_url"
EXPO_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# =============================================================================
# OPTIONAL API KEYS (for future features)
# =============================================================================

# Google OAuth (for social auth)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Apple OAuth (for social auth)
EXPO_PUBLIC_APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=""

# Analytics Services
EXPO_PUBLIC_ANALYTICS_KEY=""

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL="info"
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET="your_jwt_secret_here"
ENCRYPTION_KEY="your_encryption_key_here"

# =============================================================================
# FEATURE-SPECIFIC CONFIGURATION
# =============================================================================

# Chat Configuration
EXPO_PUBLIC_MAX_MESSAGE_LENGTH=4000
EXPO_PUBLIC_CHAT_HISTORY_LIMIT=100

# Conversation Analytics
EXPO_PUBLIC_ANALYTICS_RETENTION_DAYS=90
EXPO_PUBLIC_ENABLE_USAGE_TRACKING=true

# File Upload Limits (when storage is enabled)
EXPO_PUBLIC_MAX_FILE_SIZE_MB=10
EXPO_PUBLIC_ALLOWED_FILE_TYPES="image/*,application/pdf"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
EXPO_PUBLIC_DEPLOYMENT_ENV="development"
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_ENABLE_ERROR_REPORTING=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local
# 2. Update OPENAI_API_KEY with your OpenAI API key
# 3. Update Supabase credentials (URL, anon key, service role key)
# 4. Customize app name, slug, and branding
# 5. Enable/disable features as needed
# 6. Run: npm run start
#
# For detailed setup instructions, see: docs/SETUP.md
# For feature documentation, see: docs/features/
