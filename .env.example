# ===========================================
# EXPO TEMPLATE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and update with your actual values

# ===========================================
# APP CONFIGURATION
# ===========================================
EXPO_PUBLIC_APP_NAME=AI Assistant
EXPO_PUBLIC_APP_DESCRIPTION=Your AI-powered assistant with file upload capabilities

# ===========================================
# API CONFIGURATION
# ===========================================
EXPO_PUBLIC_API_URL=http://localhost:8081
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# ===========================================
# AI/CHAT CONFIGURATION
# ===========================================
# OpenAI API key (required for AI chat features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Chat settings
EXPO_PUBLIC_MAX_MESSAGES=100
EXPO_PUBLIC_DEFAULT_TEMPERATURE=0.7
EXPO_PUBLIC_MAX_TOKENS=2000
EXPO_PUBLIC_STREAMING_ENABLED=true

# ===========================================
# AUTHENTICATION & DATABASE
# ===========================================
# Supabase configuration (required for auth, storage, and file uploads)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Enable file upload features
EXPO_PUBLIC_ENABLE_STORAGE=true
EXPO_PUBLIC_ENABLE_FILE_UPLOADS=true

# File upload limits and settings
EXPO_PUBLIC_MAX_FILE_SIZE=10485760          # 10MB in bytes
EXPO_PUBLIC_MAX_IMAGE_SIZE=1024             # Max width/height for AI processing
EXPO_PUBLIC_THUMBNAIL_SIZE=150              # Thumbnail size in pixels
EXPO_PUBLIC_SUPABASE_STORAGE_BUCKET=chat-files

# Supported file types (comma-separated)
EXPO_PUBLIC_SUPPORTED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
EXPO_PUBLIC_SUPPORTED_DOCUMENT_TYPES=application/pdf,text/plain,text/csv

# ===========================================
# FEATURE FLAGS
# ===========================================
# Core features
EXPO_PUBLIC_ENABLE_VOICE=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_ENABLE_ANIMATIONS=true

# Authentication features
EXPO_PUBLIC_ENABLE_AUTH=true
EXPO_PUBLIC_ENABLE_EMAIL_AUTH=true
EXPO_PUBLIC_ENABLE_SMS_AUTH=false
EXPO_PUBLIC_ENABLE_GOOGLE_AUTH=false
EXPO_PUBLIC_ENABLE_APPLE_AUTH=false

# Navigation and onboarding
EXPO_PUBLIC_ENABLE_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SPLASH_ONBOARDING=true
EXPO_PUBLIC_ENABLE_SIDEBAR=true
EXPO_PUBLIC_ENABLE_TAB_NAVIGATION=false

# Advanced features
EXPO_PUBLIC_ENABLE_OFFLINE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_PUSH=false
EXPO_PUBLIC_ENABLE_REALTIME=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=false

# ===========================================
# UI CONFIGURATION
# ===========================================
EXPO_PUBLIC_ANIMATION_DURATION=300
EXPO_PUBLIC_MAX_MESSAGE_LENGTH=1000
EXPO_PUBLIC_MESSAGES_PER_PAGE=50
EXPO_PUBLIC_THEME_MODE=auto

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info

# ===========================================
# FUTURE INTEGRATIONS (Optional)
# ===========================================
# Add your API keys for additional services as needed

# Google Services (for Google Auth, etc.)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Services (for Apple Auth, etc.)
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_CLIENT_SECRET=your-apple-client-secret

# Analytics (if enabled)
# ANALYTICS_API_KEY=your-analytics-key

# Push Notifications (if enabled)
# EXPO_PUBLIC_PUSHER_APP_ID=your-pusher-app-id
# EXPO_PUBLIC_PUSHER_KEY=your-pusher-key
# EXPO_PUBLIC_PUSHER_SECRET=your-pusher-secret
# EXPO_PUBLIC_PUSHER_CLUSTER=your-pusher-cluster